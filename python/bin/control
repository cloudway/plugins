#!/bin/bash
set -e

source $VIRTUAL_ENV/bin/activate

SUPERVISOR_CONF=${CLOUDWAY_PYTHON_DIR}/etc/supervisor.conf

if [ -z "$PYTHON_WSGI_APPLICATION" ]; then
    echo "Failed to deploy, no WSGI entrypoint found." >&2
    exit 2
fi

function start() {
    echo "Start Python"
    if ! $(pgrep -x supervisord > /dev/null 2>&1); then
        supervisord -c $SUPERVISOR_CONF
    fi
}

function stop() {
    echo "Stop Python"
    if $(pgrep -x supervisord > /dev/null 2>&1); then
        supervisorctl -c $SUPERVISOR_CONF stop all
        supervisorctl -c $SUPERVISOR_CONF shutdown
    fi
}

function restart() {
    supervisorctl -c $SUPERVISOR_CONF restart all
}

function reload() {
    supervisorctl -c $SUPERVISOR_CONF reload
}

function status() {
    supervisorctl -c $SUPERVISOR_CONF status
}

case "$1" in
  start)    start ;;
  stop)     stop ;;
  restart)  restart ;;
  reload)   reload ;;
  status)   status ;;
  *)        exit 0
esac
