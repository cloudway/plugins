[unix_http_server]
file={{.CLOUDWAY_SCRATCH_DIR}}/run/supervisord.sock
chmod=0700

[supervisord]
logfile={{.CLOUDWAY_SCRATCH_LOG_DIR}}/supervisord.log
pidfile={{.CLOUDWAY_SCRATCH_DIR}}/run/supervisord.pid

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[supervisorctl]
serverurl=unix://{{.CLOUDWAY_SCRATCH_DIR}}/run/supervisord.sock

[include]
files={{.CLOUDWAY_REPO_DIR}}/etc/supervisor.conf
