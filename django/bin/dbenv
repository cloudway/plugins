if [ -n "$CLOUDWAY_MYSQL_DB_HOST" ]; then
    DJANGO_DB_ENGINE=django.db.backends.mysql
    DJANGO_DB_NAME=$CLOUDWAY_APP_NAME
    DJANGO_DB_HOST=$CLOUDWAY_MYSQL_DB_HOST
    DJANGO_DB_PORT=$CLOUDWAY_MYSQL_DB_PORT
    DJANGO_DB_USER=$CLOUDWAY_MYSQL_DB_USERNAME
    DJANGO_DB_PASSWORD=$CLOUDWAY_MYSQL_DB_PASSWORD
elif [ -n "$CLOUDWAY_POSTGRES_DB_HOST" ]; then
    DJANGO_DB_ENGINE=django.db.backends.postgresql
    DJANGO_DB_NAME=$CLOUDWAY_APP_NAME
    DJANGO_DB_HOST=$CLOUDWAY_POSTGRES_DB_HOST
    DJANGO_DB_PORT=$CLOUDWAY_POSTGRES_DB_PORT
    DJANGO_DB_USER=$CLOUDWAY_POSTGRES_DB_USERNAME
    DJANGO_DB_PASSWORD=$CLOUDWAY_POSTGRES_DB_PASSWORD
else
    DJANGO_DB_ENGINE=django.db.backends.sqlite3
    DJANGO_DB_NAME=$CLOUDWAY_DATA_DIR/django.db
fi

export DJANGO_DB_ENGINE DJANGO_DB_NAME DJANGO_DB_HOST DJANGO_DB_PORT DJANGO_DB_USER DJANGO_DB_PASSWORD
