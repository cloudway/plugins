#!/bin/bash -e

cd ${CLOUDWAY_REPO_DIR}

if [ ! -f pom.xml ]; then
  echo "Skipping maven build due to absence of pom.xml"
  exit 0
fi

if [ -n "$MAVEN_MIRROR" ]; then
    cat > ${CLOUDWAY_TOMCAT_DIR}/conf/settings.base.xml <<END_OF_SETTINGS
<settings>
  <mirrors>
    <mirror>
      <id>central_mirror</id>
      <mirrorOf>central</mirrorOf>
      <url>$MAVEN_MIRROR</url>
    </mirror>
  </mirrors>
</settings>
END_OF_SETTINGS
    MAVEN_MIRROR_FLAGS="--global-settings ${CLOUDWAY_TOMCAT_DIR}/conf/settings.base.xml"
fi

if [ -z "$MAVEN_ARGS" ]; then
  export MAVEN_ARGS="clean package -Pcloudway"
fi

MVN_CMD="mvn $MAVEN_MIRROR_FLAGS $MAVEN_ARGS"
echo "Found pom.xml... attempting to build with '$MVN_CMD'"
sed -i "s/{APP_NAME}/${CLOUDWAY_APP_NAME}/g" pom.xml
$MVN_CMD

# clear the tomcat work directory to avoid accumulating old content
# it will be recreated when tomcat starts or when the webapps directory is changed
if [ -d ${CLOUDWAY_TOMCAT_DIR}/work ]; then
  rm -rf ${CLOUDWAY_TOMCAT_DIR}/work/
fi
